#!/bin/bash

# Function to animate the text in Matrix movie style
animate_matrix_style() {
    text="Netrunners"
    len=${#text}
    i=0

    while [ $i -lt $len ]; do
        printf "\e[32m${text:$i:1}\e[0m"
        sleep 0.1
        i=$((i+1))
    done
    echo ""
}

# Function to scan ports using nmap
scan_ports() {
    echo "Enter an IP address to scan ports:"
    read -r target_ip
    echo "Scanning ports on $target_ip..."

    # Perform port scan using nmap
    nmap -p 1-1000 "$target_ip"

    echo "Port scanning completed."
}

# Function to ping 8.8.8.8
ping_8_8_8_8() {
    echo "Pinging 8.8.8.8..."
    ping -c 4 8.8.8.8
}

# Function for MTR test
run_mtr_test() {
    echo "Running MTR test..."
    # Add your MTR test logic here
    echo "MTR test completed."
}

# Main menu loop
while true; do
    # Clear the screen to create the Matrix-style animation effect
    clear
    animate_matrix_style

    echo -e "\nPlease select an option:
1. Scan Ports
2. Ping 8.8.8.8
3. MTR Test
4. Exit"

    read -r choice

    case "$choice" in
        1) scan_ports ;;
        2) ping_8_8_8_8 ;;
        3) run_mtr_test ;;
        4) exit ;;
        *) echo "Invalid option. Please select a valid option." ;;
    esac
done
Save the changes and run the script again:

bash
Copy code
./netrunners_tool.sh
Now, the script should run without any errors, and you should see "Netrunners" displayed in the Matrix movie style at the beginning. You can use the menu options to scan ports, ping 8.8.8.8, run an MTR test, or exit the tool.





