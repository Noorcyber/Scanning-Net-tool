# Main function
main() {
    # Display the design "Datto Netrunners"
    display_datto_netrunners

    # Run the functions
    scan_ports
    ping_8_8_8_8
    run_mtr_test
    run_netstat
    run_traceroute_google
    run_nslookup_google
}

# Call the main function
main
