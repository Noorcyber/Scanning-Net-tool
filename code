#!/bin/bash

# ASCII art for Netrunners
echo "
 _   _      _             __        __         _     _             _        
| \ | |    | |            \ \      / /        (_)   | |           | |       
|  \| | ___| |_   ___ _ __ \ \ /\ / /__  __ _ _ ___| |_   _  __ _| | _____ 
| . ` |/ _ \ | | | | | '_ \ \ V  V / _ \/ _` | / __| | | | |/ _` | |/ / _ \\
| |\  |  __/ | |_| | | | | | \  /\  /  __/ (_| | \__ \ | |_| | (_| |   <  __/
|_| \_|\___|_|\__,_|_|_| |_|  \/  \/ \___|\__, |_|___/_|\__,_|\__,_|_|\_\___|
                                          __/ |                           
                                         |___/                            
"

# Function to scan ports
scan_ports() {
    target_ip="$1"
    echo "Scanning ports for IP: $target_ip"
    # Your port scanning logic here (using nmap, for example)
}

# Function to ping 8.8.8.8
ping_google() {
    echo "Pinging 8.8.8.8"
    ping -c 4 8.8.8.8
}

# Function for MTR test
mtr_test() {
    target_ip="$1"
    echo "Running MTR test to IP: $target_ip"
    # Your MTR test logic here (using mtr, for example)
}

# Main menu
echo "Please select an option:"
echo "1. Scan Ports"
echo "2. Ping 8.8.8.8"
echo "3. MTR Test"
echo "4. Exit"

read -r option

case "$option" in
    1)
        echo "Enter the IP address to scan ports:"
        read -r target_ip
        scan_ports "$target_ip"
        ;;
    2)
        ping_google
        ;;
    3)
        echo "Enter the IP address for MTR test:"
        read -r target_ip
        mtr_test "$target_ip"
        ;;
    4)
        echo "Exiting..."
        exit 0
        ;;
    *)
        echo "Invalid option. Please select a valid option."
        ;;
esac
