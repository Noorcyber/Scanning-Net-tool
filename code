#!/bin/sh

ping_host() {
    if [ "$(uname)" = "Darwin" ]; then
        ping -c 4 "$1"
    else
        ping -n 4 "$1"
    fi
}

# Example usage
echo "Running port scan..."
nmap -F "$1"
echo "Port scan completed."

ping_host "8.8.8.8"

# MTR test at the end
echo "Running MTR test..."
mtr -c 5 "8.8.8.8"
echo "MTR test completed."
