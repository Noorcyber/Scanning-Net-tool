#!/bin/bash

# ASCII art for Netrunners (Linux style)
echo -e "\e[1;34m
   __   __  _______  __   __  _______ 
  |  | |  ||       ||  | |  ||       |
  |  |_|  ||   _   ||  |_|  ||    ___|
  |       ||  | |  ||       ||   |___ 
  |_     _||  |_|  ||       ||    ___|
    |   |  |       | |     | |   |___ 
    |___|  |_______|  |___|  |_______|

\e[0m"

# Function to scan ports
scan_ports() {
    echo "Scanning ports..."
    # Add your port scanning logic here
    echo "Port scanning completed."
}

# Function to ping 8.8.8.8
ping_8_8_8_8() {
    echo "Pinging 8.8.8.8..."
    ping -c 4 8.8.8.8
}

# Function for MTR test
run_mtr_test() {
    echo "Running MTR test..."
    # Add your MTR test logic here
    echo "MTR test completed."
}

# Main menu loop
while true; do
    echo -e "\nPlease select an option:
1. Scan Ports
2. Ping 8.8.8.8
3. MTR Test
4. Exit"

    read -r choice

    case "$choice" in
        1) scan_ports ;;
        2) ping_8_8_8_8 ;;
        3) run_mtr_test ;;
        4) exit ;;
        *) echo "Invalid option. Please select a valid option." ;;
    esac
done
